locals {
  prefix  = "prod"
  zone_id = "f2c00168a7ecd694bb1ba017b332c019"
}

resource "aws_key_pair" "default" {
  key_name   = "${local.prefix}-default"
  public_key = "ssh-rsa "
}

module "vm" {
  source   = "../../modules/ec2"
  zone_id  = local.zone_id
  name     = "prod-hello"
  key_name = aws_key_pair.default.key_name
}

output "domain" {
  value = module.vm.domain
}
